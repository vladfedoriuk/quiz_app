div(class="centered")
    form(method="post" action="/question/create/"+quiz_id)
        div(class="row")
            div(class="form-group col-md-6 col-md-offset-3")
                label(for="question") Question
                textarea(class="form-control" id="question" name="question" rows="3" placeholder="Ask something")
                if question_errors
                    each error in question_errors
                        if error.param == 'question'
                            div(class="invalid-feedback" style="color: red;")
                                p=error.msg
                            - break
        each val in [1, 2, 3, 4]

            div(class="row")
                div(class="form-group col-md-6 col-md-offset-3")
                    input(type="text" class="form-control" name="answer_"+val placeholder=val)
                    if question_errors
                        each error in question_errors
                            if error.param == "answer_"+val
                                div(class="invalid-feedback" style="color: red;")
                                    p=error.msg
                                - break

        div(class="row")
            div(class="form-group col-md-6 col-md-offset-3")
                select(multiple class="form-control" id="correct_answer" name="correct_answer")
                    each val in [1, 2, 3, 4]
                        option=val
                if question_errors
                    each error in question_errors
                        if error.param == "correct_answer"
                            div(class="invalid-feedback" style="color: red;")
                                p=error.msg
                            - break
        
        div(class="row")
            div(class="form-group col-md-4 col-md-offset-4")
                label(for="points") points
                input(type="number" class="form-control" id="points" name="points" value=10)
                if question_errors
                    each error in question_errors
                        if error.param == "points"
                            div(class="invalid-feedback" style="color: red;")
                                p=error.msg
                            - break

        div(class="row")
            div(class="form-group col-md-6 col-md-offset-3")
                input(type="submit" class="btn btn-success mb-2" value="Create")