div(class="centered")
    form(method="post", action="/quiz/create")
        div(class="row")
            div(class="form-group col-md-6  col-md-offset-3")
                input(type="text" class="form-control" name="title" placeholder="Quiz title")
                if quiz_errors
                    each error in quiz_errors
                        if error.param == 'title'
                            div(class="invalid-feedback" style="color: red;")
                                p=error.msg
                            - break
        div(class="row")
            div(class="form-group col")
                input(type="text" class="form-control" name="description" placeholder="Quiz description")
                if quiz_errors
                    each error in quiz_errors
                        if error.param == 'description'
                            div(class="invalid-feedback" style="color: red;")
                                p=error.msg
                            - break
        div(class="row")
            div(class="form-group col-md-6  col-md-offset-3")
                input(type="submit" class="btn btn-success mb-2" value="Create")