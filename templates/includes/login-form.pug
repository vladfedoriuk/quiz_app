div(class="centered")
    h1(class="display-3") Log in

    form(method="post", action="/login" id="login")
        div(class="form-group row")
            label(
                for="log-username"
                class="col-sm-6 col-form-label"
            ) Username
            div(class="col-sm-6")
                input(
                    type="text" 
                    name="username"
                    id="log-username"
                    class="form-control"
                    placeholder="Username"
                )
                if log_errors
                    each error in log_errors
                        if error.param == 'username'
                            div(class="invalid-feedback" style="color: red;")
                                p=error.msg
                        - break


        
        div(class="form-group row")
            label(
                for="log-password"
                class="col-sm-6 col-form-label"
            ) Password
            div(class="col-sm-6")
                input(
                    type="password" 
                    name="password"
                    id="log-password"
                    class="form-control"
                    placeholder="Password"
                )
                if log_errors
                    each error in log_errors
                        if error.param == 'password'
                            div(class="invalid-feedback" style="color: red;")
                                p=error.msg
                            - break

                if validation_message
                    div(class="invalid-feedback" style="color: red;")
                        p=validation_message
        
        input(type="submit" class="btn btn-primary mb-2" value="Log in")
        